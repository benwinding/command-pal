{
  "compilerOptions": {
    "target": "es6",
    "strict": false,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "svelte",
    ],
    "paths": {
      "svelte": [
        "./node_modules/svelte/types/index.d.ts"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.svelte"
  ],
  "exclude": [
    "node_modules"
  ]
}